# ========== MySQL Database Settings ==========
# Hostname atau IP address database MySQL
DB_HOST=localhost

# Port MySQL server (default: 3306)
DB_PORT=3306

# Username untuk akses database
DB_USER=your_mysql_username

# Password untuk akses database
DB_PASSWORD=your_mysql_password

# Nama database untuk menyimpan auth state
DB_NAME=baileys

# Nama table untuk auth state
DB_TABLE=auth

# ========== Redis Settings ==========
# URL koneksi Redis, contoh: redis://:password@localhost:6379
REDIS_URL=redis://:your_redis_password@localhost:6379

# ========== WhatsApp Bot Settings ==========
# Group JID tempat bot akan mengirim update
GROUP_JID=your_group_jid_here

# ========== Anime Scraper Settings ==========
# URL website anime yang akan di-scrape
SCRAPER_URL=https://animekompi.top/

# Path file untuk menyimpan data anime terakhir
SCRAPER_DATA_FILE=./lastAnimeData.json

# Interval pengecekan update anime (dalam milidetik)
SCRAPER_INTERVAL=5000

# ========== Logger Settings ==========
# Level log (pilihan: silent, info, debug, warn, error)
LOG_LEVEL=silent
